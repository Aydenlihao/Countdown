<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:background="@drawable/dialog_background" android:orientation="vertical" android:layout_gravity="center_horizontal" android:padding="10dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center">
    <com.wx.wheelview.widget.WheelView
        android:id="@+id/minutes"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
    </com.wx.wheelview.widget.WheelView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_gravity="center"
        android:text=":"/>
    <com.wx.wheelview.widget.WheelView
        android:id="@+id/seconds"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
    </com.wx.wheelview.widget.WheelView>
</LinearLayout>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/set_time_btn"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="确定"/>
</LinearLayout>